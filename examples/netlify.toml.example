# Netlify Configuration - Security Hardened
# Version: 2.0
# 
# This is a TEMPLATE file showing secure Netlify configuration
# Copy this to netlify.toml in your repository root
# 
# IMPORTANT: Never commit secrets to this file
# Set secrets via Netlify UI or CLI instead

# ============================================================================
# BUILD SETTINGS
# ============================================================================

[build]
  # Build command - customize for your project
  command = "npm run build"
  
  # Output directory - where your built files are
  publish = "dist"
  
  # Functions directory (for serverless functions)
  functions = "netlify/functions"
  
  # Edge functions directory
  edge_functions = "netlify/edge-functions"

# Build environment variables (non-sensitive only)
[build.environment]
  # Node.js version
  NODE_VERSION = "20"
  
  # Build optimizations
  NODE_ENV = "production"
  NPM_FLAGS = "--legacy-peer-deps"
  
  # ❌ NEVER PUT SECRETS HERE
  # NEXT_PUBLIC_SUPABASE_ANON_KEY = "xxxx"  # OK - public key
  # SUPABASE_SERVICE_KEY = "xxxx"           # ❌ NEVER - use Netlify UI

# ============================================================================
# CONTEXT-SPECIFIC SETTINGS
# ============================================================================

# Production context
[context.production]
  # Production-specific build command
  command = "npm run build:production"
  
  # Production environment variables (non-sensitive)
  [context.production.environment]
    NEXT_PUBLIC_API_URL = "https://api.yourdomain.com"
    NEXT_PUBLIC_ENV = "production"
    NODE_ENV = "production"

# Deploy Preview context (for pull requests)
[context.deploy-preview]
  command = "npm run build:preview"
  
  [context.deploy-preview.environment]
    NEXT_PUBLIC_API_URL = "https://staging-api.yourdomain.com"
    NEXT_PUBLIC_ENV = "preview"
    NODE_ENV = "development"
    # Add robots noindex for preview deploys
    ROBOTS_NOINDEX = "true"

# Branch deploys (e.g., develop branch)
[context.branch-deploy]
  command = "npm run build:development"
  
  [context.branch-deploy.environment]
    NEXT_PUBLIC_API_URL = "https://dev-api.yourdomain.com"
    NEXT_PUBLIC_ENV = "development"
    NODE_ENV = "development"

# Specific branch configuration (example: staging branch)
[context.staging]
  command = "npm run build:staging"
  
  [context.staging.environment]
    NEXT_PUBLIC_API_URL = "https://staging-api.yourdomain.com"
    NEXT_PUBLIC_ENV = "staging"

# ============================================================================
# REDIRECTS & REWRITES
# ============================================================================

# API proxy (to hide backend URL)
[[redirects]]
  from = "/api/*"
  to = "https://your-backend-api.com/:splat"
  status = 200
  force = true
  
  # Security headers for API proxy
  [redirects.headers]
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"

# Redirect HTTP to HTTPS
[[redirects]]
  from = "http://yourdomain.com/*"
  to = "https://yourdomain.com/:splat"
  status = 301
  force = true

# Redirect www to non-www (or vice versa)
[[redirects]]
  from = "https://www.yourdomain.com/*"
  to = "https://yourdomain.com/:splat"
  status = 301
  force = true

# Single Page Application (SPA) fallback
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# ============================================================================
# SECURITY HEADERS
# ============================================================================

# Global security headers for all pages
[[headers]]
  for = "/*"
  
  [headers.values]
    # Prevent clickjacking
    X-Frame-Options = "DENY"
    
    # Prevent MIME type sniffing
    X-Content-Type-Options = "nosniff"
    
    # XSS Protection (legacy browsers)
    X-XSS-Protection = "1; mode=block"
    
    # Referrer Policy
    Referrer-Policy = "strict-origin-when-cross-origin"
    
    # Permissions Policy (formerly Feature Policy)
    Permissions-Policy = '''
      accelerometer=(),
      camera=(),
      geolocation=(),
      gyroscope=(),
      magnetometer=(),
      microphone=(),
      payment=(),
      usb=()
    '''
    
    # Content Security Policy (CSP)
    # ⚠️ CUSTOMIZE THIS FOR YOUR APP
    Content-Security-Policy = '''
      default-src 'self';
      script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.example.com;
      style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
      img-src 'self' data: https: blob:;
      font-src 'self' https://fonts.gstatic.com;
      connect-src 'self' https://*.supabase.co https://api.example.com;
      frame-ancestors 'none';
      base-uri 'self';
      form-action 'self';
      upgrade-insecure-requests;
    '''
    
    # Strict Transport Security (HSTS)
    # Force HTTPS for 2 years, including subdomains
    Strict-Transport-Security = "max-age=63072000; includeSubDomains; preload"

# API-specific headers
[[headers]]
  for = "/api/*"
  
  [headers.values]
    # CORS headers (adjust for your needs)
    Access-Control-Allow-Origin = "https://yourdomain.com"
    Access-Control-Allow-Methods = "GET, POST, PUT, DELETE, OPTIONS"
    Access-Control-Allow-Headers = "Content-Type, Authorization"
    Access-Control-Max-Age = "86400"
    
    # No caching for API responses
    Cache-Control = "no-store, no-cache, must-revalidate, proxy-revalidate"
    Pragma = "no-cache"
    Expires = "0"

# Static assets caching
[[headers]]
  for = "/static/*"
  
  [headers.values]
    # Cache static assets for 1 year
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.js"
  
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.css"
  
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

# Images caching
[[headers]]
  for = "/*.jpg"
  
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.png"
  
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.webp"
  
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

# No caching for HTML
[[headers]]
  for = "/*.html"
  
  [headers.values]
    Cache-Control = "public, max-age=0, must-revalidate"

# ============================================================================
# FUNCTIONS CONFIGURATION
# ============================================================================

[functions]
  # Directory for serverless functions
  directory = "netlify/functions"
  
  # Node.js version for functions
  node_bundler = "esbuild"
  
  # Include specific files in function bundles
  # included_files = ["path/to/file"]
  
  # Exclude files from function bundles
  # excluded_files = ["**/*.test.js"]

# Individual function configuration
[functions."api-handler"]
  # Custom timeout (max 26 seconds on free tier, 60s on paid)
  timeout = 10
  
  # Memory limit (128-3008 MB, in 64 MB increments)
  memory = 256

# Rate limiting for functions (requires paid plan)
# [functions."api-handler".rate_limit]
#   window_size = 60  # seconds
#   window_limit = 100  # requests per window

# ============================================================================
# EDGE FUNCTIONS CONFIGURATION
# ============================================================================

[[edge_functions]]
  function = "auth-guard"
  path = "/dashboard/*"

[[edge_functions]]
  function = "geo-redirect"
  path = "/*"

